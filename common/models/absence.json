{
  "name": "absence",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "slack_id": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "Date",
      "require": true
    },
    "excused": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "notes": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "student": {
      "type": "belongsTo",
      "model": "student",
      "foreignKey": "slack_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
